{
  "name": "ionia",
  "version": "0.1.0",
  "description": "A Windows Electron video player application",
  "main": "./dist-electron/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.node.json && node -e \"require('fs').copyFileSync('electron/preload.js', 'dist-electron/electron/preload.js')\"",
    "build:native": "cd native-audio && node-gyp rebuild --msvs_version=2022",
    "rebuild:native": "cd native-audio && node-gyp clean && node-gyp rebuild --msvs_version=2022",
    "build:native:electron": "cd native-audio && node-gyp rebuild --target=28.0.0 --arch=x64 --disturl=https://electronjs.org/headers --msvs_version=2022",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently -k -s first \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:dev:win": "powershell -ExecutionPolicy Bypass -File ./start-dev.ps1",
    "electron:build": "npm run build && npm run build:electron && npm run build:native && electron-builder"
  },
  "keywords": [
    "electron",
    "video-player",
    "react",
    "typescript"
  ],
  "author": "big21ray",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^12.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
